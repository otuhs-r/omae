<section class="content-header">
  <h1>
    <i class="fa fa-area-chart"></i> ダッシュボード
    <small>omae</small>
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to 'ホーム', root_path %></li>
    <li class="active">ダッシュボード</li>
  </ol>
</section>
<hr>

<div class="row">
  <%= form_tag api_user_attendances_path(current_user), remote: true do %>
    <div class="col-lg-6 col-xs-9">
      <div class="input-daterange input-group" id="datepicker">
        <input type="text" class="input-sm form-control date" autocomplete="off" name="start_date" id="start_date" value=<%= Time.current.beginning_of_month %>/>
        <span class="input-group-addon">〜</span>
        <input type="text" class="input-sm form-control date" autocomplete="off" name="end_date" id="end_date" value=<%= Time.current %>/>
      </div>
    </div>
    <div class="col-xs-1">
      <%= button_tag '表示', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<hr>

<div class="row">
  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="info-box">
      <span class="info-box-icon bg-aqua">
        <i class="fa fa-building"></i>
      </span>
      <%= render 'all_working_hours' %>
    </div>
  </div>
  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="info-box">
      <span class="info-box-icon bg-green">
        <i class="fa fa-building-o"></i>
      </span>
      <%= render 'all_extra_working_hours' %>
    </div>
  </div>
  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="info-box">
      <span class="info-box-icon bg-yellow">
        <i class="fa fa-balance-scale"></i>
      </span>
      <%= render 'average_extra_working_hours' %>
    </div>
  </div>
  <div class="col-md-3 col-sm-6 col-xs-12">
    <div class="info-box">
      <span class="info-box-icon bg-red">
        <i class="fa fa-calendar-check-o"></i>
      </span>
      <%= render 'days_worked' %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-sm-12">
    <div class="nav-tabs-custom">
      <ul class="nav nav-tabs pull-right">
        <li class="active">
          <a href="#group_by_day" data-toggle="tab">日次</a>
        </li>
        <li>
          <a href="#group_by_week" data-toggle="tab">週次</a>
        </li>
        <li>
          <a href="#group_by_month" data-toggle="tab">月次</a>
        </li>
        <li class="pull-left header">
          総労働時間
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="group_by_day">
          <%= render 'all_group_by_day' %>
        </div>
        <div class="tab-pane" id="group_by_week">
          <%= render 'all_group_by_week' %>
        </div>
        <div class="tab-pane" id="group_by_month">
          <%= render 'all_group_by_month' %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="box box-danger">
      <div class="box-header with-border">
        <h3 class="box-title">曜日別 平均残業時間</h3>
      </div>
      <div class="box-body">
        <%= render 'avg_by_day_of_week' %>
      </div>
    </div>
  </div>
</div>
